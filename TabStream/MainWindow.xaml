<Window x:Class="TabStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabStream"
        mc:Ignorable="d"
        Title="TabStream - Audio Track" Height="800" Width="1200" WindowState="Maximized">
    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <Border Grid.Row="0" Background="#FF2D2D2D" Padding="10" BorderBrush="#FF404040" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="PlayButton" Content="▶ Play" Width="80" Height="30" Margin="5,0" 
                        Background="#FF4CAF50" Foreground="White" FontWeight="Bold"
                        Click="PlayButton_Click"/>
                <Button x:Name="StopButton" Content="⏹ Stop" Width="80" Height="30" Margin="5,0"
                        Background="#FFF44336" Foreground="White" FontWeight="Bold"
                        Click="StopButton_Click"/>
                <Button x:Name="PauseButton" Content="⏸ Pause" Width="80" Height="30" Margin="5,0"
                        Background="#FFFF9800" Foreground="White" FontWeight="Bold"
                        Click="PauseButton_Click"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                
                <TextBlock Text="Volume:" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                <Slider x:Name="VolumeSlider" Width="100" Minimum="0" Maximum="100" Value="50" 
                        VerticalAlignment="Center" Margin="5,0" ValueChanged="VolumeSlider_ValueChanged"/>
                <TextBlock x:Name="VolumeText" Text="50%" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                
                <TextBlock Text="Speed:" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                <Slider x:Name="SpeedSlider" Width="100" Minimum="0.25" Maximum="2.0" Value="1.0" 
                        VerticalAlignment="Center" Margin="5,0" ValueChanged="SpeedSlider_ValueChanged"/>
                <TextBlock x:Name="SpeedText" Text="1.0x" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                
                <TextBlock Text="Zoom:" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                <Slider x:Name="ZoomSlider" Width="100" Minimum="0.1" Maximum="5.0" Value="1.0" 
                        VerticalAlignment="Center" Margin="5,0" ValueChanged="ZoomSlider_ValueChanged"/>
                <TextBlock x:Name="ZoomText" Text="100%" VerticalAlignment="Center" Foreground="White" Margin="5,0"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="20,0"/>
                
                <Button x:Name="AddTrackButton" Content="➕ Add Track" Width="100" Height="30" Margin="5,0"
                        Background="#FF2196F3" Foreground="White" FontWeight="Bold"
                        Click="AddTrackButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Track Headers -->
        <Border Grid.Row="1" Background="#FF333333" Padding="5" BorderBrush="#FF404040" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Track Name" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
                <ScrollViewer Grid.Column="1" x:Name="TimeRulerScrollViewer" HorizontalScrollBarVisibility="Auto">
                    <Canvas x:Name="TimeRuler" Height="30" Background="#FF333333">
                        <Border BorderBrush="#FF555555" BorderThickness="0,0,0,1"/>
                    </Canvas>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Tracks Container -->
        <ScrollViewer Grid.Row="2" x:Name="TracksScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="TracksContainer" Background="#FF252525">
                <!-- Tracks will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Progress Bar -->
        <Border Grid.Row="3" Background="#FF2D2D2D" Padding="10" BorderBrush="#FF404040" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="CurrentTimeText" Text="00:00" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
                
                <Slider x:Name="ProgressSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="0" 
                        VerticalAlignment="Center" Margin="10,0" ValueChanged="ProgressSlider_ValueChanged"
                        PreviewMouseDown="ProgressSlider_PreviewMouseDown" PreviewMouseUp="ProgressSlider_PreviewMouseUp"/>
                
                <TextBlock x:Name="TotalTimeText" Grid.Column="2" Text="00:00" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
